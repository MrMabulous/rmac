<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8">

    %= stylesheet '/css/legacy/' . userconfig->val('stylesheet')
    %= javascript '/js/jquery.min.js'

    % my $refresh = stash('refresh');

    % if ($refresh) {
    <meta http-equiv="refresh" content="<%= $refresh %>">
    % }
    
    <style>
      td .radio { vertical-align: middle; margin: 0 }
      
      table.log { border-spacing: 1ex; }
      table td.log { font-family: Courier, monospace; }
      #log { display: none; }
    </style>
    
  </head>
  
  <body>
    <%= content %>
  </body>
</html>
